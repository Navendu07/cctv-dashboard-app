prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"  // Changed from "sqlite"
  url      = env("DATABASE_URL")
}

model Camera {
  id       String @id @default(cuid())
  name     String
  location String

  // Relations
  incidents Incident[]

  @@map("cameras")
}

model Incident {
  id           String   @id @default(cuid())
  cameraId     String
  type         String
  tsStart      DateTime
  tsEnd        DateTime?
  thumbnailUrl String
  resolved     Boolean  @default(false)

  // Relations
  camera Camera @relation(fields: [cameraId], references: [id], onDelete: Cascade)

  @@map("incidents")
}
